config defaultToCurrentScreen true

# set screens
alias macbook 1920x1200
alias mon-retina 1680x1050
alias mon-lg 2560x1440

# variables
alias width screenSizeX
alias height screenSizeY
alias originX screenOriginX
alias originY screenOriginY

alias oneThirdWidth ${width}/3
alias oneHalfWidth ${width}/2
alias twoThirdsWidth (${oneThirdWidth}+${oneThirdWidth})
alias oneHalfHeight ${height}/2

# positions
alias full move ${originX};${originY} ${width};${height}

alias leftHalf move ${originX};${originY} ${oneHalfWidth};${height}
alias rightHalf move (${originX}+${oneHalfWidth});${originY} ${oneHalfWidth};${height}

alias topHalf move ${originX};${originY} ${width};${oneHalfHeight}
alias bottomHalf move ${originX};${originY}+${oneHalfHeight} ${width};${oneHalfHeight}

alias leftOneThird move ${originX};${originY} ${oneThirdWidth};${height}
alias leftTwoThirds move ${originX};${originY} ${twoThirdsWidth};${height}
alias centerOneThird move ${originX} + ${oneThirdWidth};${originY} ${oneThirdWidth};${height}
alias rightTwoThirds move (${originX}+${oneThirdWidth});${originY} ${twoThirdsWidth};${height}
alias rightOneThird move (${originX}+${twoThirdsWidth});${originY} ${oneThirdWidth};${height}

# static positions
alias macbookFull ${full} ${macbook}

alias retinaFull ${full} ${mon-retina}
alias retinaLeft ${leftHalf} ${mon-retina}
alias retinaRight ${rightHalf} ${mon-retina}
alias retinaTop ${topHalf} ${mon-retina}
alias retinaBottom ${bottomHalf} ${mon-retina}

alias monitorFull ${full} ${mon-lg}
alias monitorLeft ${leftHalf} ${mon-lg}
alias monitorRight ${rightHalf} ${mon-lg}
alias monitorTop ${topHalf} ${mon-lg}
alias monitorBottom ${bottomHalf} ${mon-lg}
alias monitorLeftOneThird ${leftOneThird} ${mon-lg}
alias monitorLeftTwoThirds ${leftTwoThirds} ${mon-lg}
alias monitorRightTwoThirds ${rightTwoThirds} ${mon-lg}
alias monitorRightOneThird ${rightOneThird} ${mon-lg}

# keybinding alias
alias movetrigger cmd,alt
alias extramovetrigger shift,cmd,alt
alias apptrigger ctrl,shift

# quick switching to commonly used apps
bind c:${apptrigger} focus 'Google Chrome'
bind s:${apptrigger} focus 'Slack'
bind t:${apptrigger} focus 'Terminal'
bind space:${apptrigger} focus 'Terminal'

# movement keys
bind left:${movetrigger} ${leftHalf}
bind left:${extramovetrigger} ${leftOneThird}
bind right:${movetrigger} ${rightHalf}
bind right:${extramovetrigger} ${rightOneThird}
bind up:${movetrigger} ${topHalf}
bind up:${extramovetrigger} ${leftTwoThirds}
bind down:${movetrigger} ${bottomHalf}
bind down:${extramovetrigger} ${rightTwoThirds}
bind f:${movetrigger} ${full}

# move to other monitors
bind left:shift,ctrl,cmd throw 0 resize
bind right:shift,ctrl,cmd throw 1 resize

# Laptop-only layout
layout macbook 'Terminal':REPEAT ${macbookFull}
layout macbook 'Slack':REPEAT ${macbookFull}
layout macbook 'Google Chrome':REPEAT ${macbookFull}

# Second monitor standard coding
layout 2mon-std-coding 'Terminal':REPEAT ${monitorFull}
layout 2mon-std-coding 'Slack':REPEAT ${retinaFull}
layout 2mon-std-coding 'Google Chrome':REPEAT ${monitorFull}

# Second monitor browser coding
layout 2mon-browser-coding 'Terminal':REPEAT ${monitorRight}
layout 2mon-browser-coding 'Slack':REPEAT ${retinaFull}
layout 2mon-browser-coding 'Google Chrome':REPEAT ${monitorLeft}

# Second monitor non-coding
layout 2mon-non-coding 'Terminal':REPEAT ${retinaFull}
layout 2mon-non-coding 'Slack':REPEAT ${retinaFull}
layout 2mon-non-coding 'Google Chrome':REPEAT ${monitorFull}

# Second monitor coding, laptop browser
layout 2mon-coding-only 'Terminal':REPEAT ${monitorFull}
layout 2mon-coding-only 'Google Chrome':REPEAT ${retinaFull}
layout 2mon-coding-only 'Slack':REPEAT ${retinaFull}

# default layouts
default macbook resolutions:${macbook}
default 2mon-std-coding resolutions:${mon-retina},${mon-lg}

# bind layout keys
bind 1:${movetrigger} layout macbook
bind 2:${movetrigger} layout 2mon-std-coding
bind 3:${movetrigger} layout 2mon-browser-coding
bind 4:${movetrigger} layout 2mon-non-coding
bind 5:${movetrigger} layout 2mon-coding-only
